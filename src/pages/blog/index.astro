---
import BaseHead from "../../components/BaseHead.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../../consts";
import { getCollection } from "astro:content";
import FormattedDate from "../../components/FormattedDate.astro";

const posts = (await getCollection("blog"))
  .filter((post) => !post.data.draft)
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    <style>
      main {
        width: 100%;
        max-width: 800px;
        background-color: var(--blueprint-blue-dark);
        border: 2px solid var(--border-color);
        box-shadow: var(--box-shadow);
        padding: 2rem;
        margin: 3em auto 4rem auto; /* Center and add spacing */
        box-sizing: border-box; /* Ensure padding doesn't affect width */
      }
      ul {
        display: grid;
        grid-template-columns: 1fr;
        gap: 2rem;
        list-style-type: none;
        margin: 0;
        padding: 0;
      }
      ul li {
        transition: transform 0.2s ease;
        border: 2px solid var(--border-color);
        background: rgba(0, 0, 0, 0.2);
        padding: 1.5rem;
      }
      ul li:hover {
        background: rgba(255, 255, 255, 0.05);
        border-color: var(--accent);
        transform: translate(-4px, -4px);
        box-shadow: 6px 6px 0px rgba(0, 0, 0, 0.2);
      }
      ul li * {
        text-decoration: none;
        transition: all 0.15s ease;
      }
      ul li a {
        display: block;
        border: none; /* Remove global link border */
      }
      ul li a:hover {
        background: none; /* Remove global link background */
        box-shadow: none; /* Remove global link shadow */
        color: inherit; /* Don't change text color of the container, let specific children handle it */
      }
      .title {
        margin: 0 0 0.5rem 0;
        color: var(--text-main);
        line-height: 1.3;
        font-size: 1.5rem;
        font-weight: 900;
        text-transform: uppercase;
        letter-spacing: -0.01em;
      }
      .date {
        margin: 0;
        color: var(--text-secondary);
        font-size: 0.875rem;
        font-weight: 700;
        text-transform: uppercase;
      }
      ul li a:hover .title {
        color: var(--accent);
      }

      @media (max-width: 800px) {
        ul {
          gap: 1.5rem;
        }
      }
    </style>
  </head>
  <body>
    <Header transition:persist />
    <main>
      <section>
        <ul>
          {
            posts.map((post) => (
              <li>
                <a href={`/blog/${post.id}/`}>
                  <h4 class="title">{post.data.title}</h4>
                  <p class="date">
                    <FormattedDate date={post.data.pubDate} />
                  </p>
                </a>
              </li>
            ))
          }
        </ul>
      </section>
    </main>
    <Footer />
  </body>
</html>
